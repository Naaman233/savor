{
  "name": "savor",
  "version": "1.2.0",
  "description": "A simple way of adding tests to your Node modules",
  "scripts": {
    "test": "./node_modules/.bin/mocha --recursive test/specs/**/*.js",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --report lcovonly test/specs/**/*.js"
  },
  "bin": {
    "savor": "bin/index.js"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idancali/savor.git"
  },
  "author": "I. Dan Calinescu <idancalinescu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/idancali/savor/issues"
  },
  "keywords": [
    "bdd",
    "tdd",
    "mocha",
    "unit-testing",
    "testing",
    "qa",
    "test",
    "coverage"
  ],
  "homepage": "https://github.com/idancali/savor",
  "dependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/fs-extra": "^8.1.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.5",
    "@types/sinon": "^9.0.0",
    "@types/tmp": "^0.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codacy-coverage": "^1.1.3",
    "codeclimate-test-reporter": "^0.4.0",
    "coveralls": "^2.11.12",
    "cross-env": "^7.0.2",
    "esdoc": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "fs-extra": "^0.30.0",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.2.0",
    "nyc": "^15.0.0",
    "opn": "^4.0.2",
    "sinon": "^8.1.1",
    "standard": "^10.0.3",
    "tmp": "0.0.28",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
